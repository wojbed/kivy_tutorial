<SampGridLayout>:
    rows: 2

    BoxLayout:
        size_hint_y: None
        height: 100
        spacing: 15

        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            background_normal: 'open.png'
            size_hint_x: None
            width: 100
        Button:
            background_normal: 'disk.png'
            size_hint_x: None
            width: 100
        Button:
            background_normal: 'exit.png'
            size_hint_x: None
            width: 100